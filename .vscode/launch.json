{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Uvicorn (backend/app)",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "cwd": "${workspaceFolder}/backend",
            "args": [
                "app.main:app",
                "--reload",
                "--port", "8000"
            ],
            "jinja": true,
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/backend"
            },
            "console": "integratedTerminal"
        }
    ]
}
